<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lastChatsItem_profile_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/lastChatsItem_username_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/lastChatsItem_profile_imageView"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastChatsItem_lastMessage_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastChatsItem_username_textView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/lastChatsItem_profile_imageView"
            android:text="Last message"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lastChatsItem_online_imageView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/lastChatsItem_username_textView"
            android:layout_marginStart="-16dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/lastChatsItem_profile_imageView"
            android:src="@drawable/profile"
            android:visibility="gone"
            app:civ_border_color="#05df29"
            app:civ_border_width="12dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lastChatsItem_offline_imageView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/lastChatsItem_username_textView"
            android:layout_marginStart="-16dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/lastChatsItem_profile_imageView"
            android:src="@drawable/profile"
            android:visibility="gone"
            app:civ_border_color="#bfbfbf"
            app:civ_border_width="12dp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>